<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_main_layout"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:background="#fff"
    android:clickable="true"

    android:padding="8dp">

    <ImageView
        android:id="@+id/category_bg"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drawable_circle" />

    <TextView
        android:id="@+id/textView_category_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:maxLines="2"
        android:text="lorem ipsum del dellopi"
        android:textAlignment="center"
        android:textColor="@color/textColorDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_bg"
        app:layout_constraintVertical_bias="0.0"
        app:lineHeight="18sp" />

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_bg"
        app:layout_constraintEnd_toEndOf="@+id/category_bg"
        app:layout_constraintStart_toStartOf="@+id/category_bg"
        app:layout_constraintTop_toTopOf="@+id/category_bg"
        app:srcCompat="@drawable/ic_pill" />
</androidx.constraintlayout.widget.ConstraintLayout>